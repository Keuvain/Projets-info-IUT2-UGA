{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
<h1>Résultats pour "{{ recherche }}"</h1>
<div class="row">
    {% for produit in produits %}
        <div class="col-md-4">
            <div class="card">
                <img src="{{ asset(produit.visuel) }}" class="card-img-top" alt="{{ produit.libelle }}">
                <div class="card-body">
                    <h5 class="card-title">{{ produit.libelle }}</h5>
                    <p class="card-text">{{ produit.texte }}</p>
                    <a href="#" class="btn btn-primary">Voir produit</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucun produit trouvé.</p>
    {% endfor %}
</div>
{% endblock %}
