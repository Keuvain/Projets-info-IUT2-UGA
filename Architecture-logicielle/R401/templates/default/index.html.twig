{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h3>
				<i class="fas fa-home"></i>
				 {% trans %} default.index.titre {% endtrans %}
			</h3>
		</div>
		<div class="card-body">
			<div class="card clickable" onclick="location = '{{ path('app_boutique')}}'">
				<img src="{{asset("images/epicerie.jpg")}}" class="card-img-top" alt="Logo Boutique"/>
				<div class="card-body">
					<p class="card-text">
						<i>
						{% trans %} default.index.home {% endtrans %}
						</i>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
